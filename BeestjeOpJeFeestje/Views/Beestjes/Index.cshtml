@model IEnumerable<BeestjeOpJeFeestje.ViewModels.BeestjeVM>

@{
    ViewBag.Title = "Index";
}

<h2>Beestjes overzicht</h2>

<p>
    @Html.ActionLink("Voeg een nieuw beestje toe", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Foto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <img src='@Url.Content(item.ImagePath)' height="50"/>
        </td>
        <td>
            @Html.ActionLink("Aanpassen", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Verwijderen", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
