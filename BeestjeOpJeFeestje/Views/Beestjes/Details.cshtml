@model BeestjeOpJeFeestje.ViewModels.BeestjeVM

<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h2>Details @Model.Name</h2>
            <div class="row">
                <img class="center-block" height="300" src='@Url.Content(Model.ImagePath)' />
                <div class="center-block">
                    <dl>
                        <dt>Naam </dt>
                        <dd>@Model.Name</dd>
                        <dt>Prijs: </dt>
                        <dd>@Model.Price</dd>
                        @if (@Model.Beest.AccessoireList.Count > 0)
                        {
                            <dt>Accessoires:</dt>
                            foreach (var item in Model.AccessoiresList)
                            {
                                <dd>@item.Name</dd>
                            }
                        }
                        @if (@Model.AllBoekingen.Count > 0)
                        {
                            <dt>Al ingepland op:</dt>
                            foreach (var item in Model.AllBoekingen)
                            {
                                <dd>@item.Date.ToString("dd/MM/yyyy")</dd>
                            }
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Aanpassen", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Terug naar overzicht", "Index")
</p>
