@model BeestjeOpJeFeestje.ViewModels.BoekingVM
@{
    ViewBag.Title = "Details";
}

    <div class="container">
        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <hr/>
                    <h2 class="intro-text text-center">@Model.FullName</h2>
                    <hr/>
                    <p>Adres: @Model.Adres</p>
                    <p>Telefoon: @Model.Number</p>
                    <p>Email: @Model.Email</p>
                    <p>Bestellingsdatum: @Model.Date.ToString("dd/MM/yyyy")</p>

                    @foreach (var beest in Model.BoekingModel.Beestjes)
                     {
                        <hr/>
                        <p>Naam: @beest.Name</p>
                        <p>Type: @beest.Type</p>
                        <p>Prijs: @beest.Price</p>
                        <img src='@Url.Content(beest.ImagePath)' />
                            <p>Accessoires:</p>
                            <dl>
                                @foreach (var item in beest.AccessoireList)
                                {
                                    <dd>@item.Name</dd>
                                }
                            </dl>
                     }
                    <hr />
                    <h2>Totaal prijs: @Model.TotalPrice</h2>
              
                </div>
            </div>
        </div>
    </div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
